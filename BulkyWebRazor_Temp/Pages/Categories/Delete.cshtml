@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Xóa Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" type="text" disabled class="form-control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Xóa</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</form>